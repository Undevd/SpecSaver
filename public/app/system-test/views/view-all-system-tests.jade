.container(ng-show="project")
    .colour6.pad.row
        .col-md-1
            span.h1
                a(ng-href="/p/{{project.code}}/s")
                    span.glyphicon.glyphicon-leaf
        .col-md-11
            h3
                a.btn.btn-default.pull-right(ng-href="/c/p/{{project.code}}/s")
                    span.glyphicon.glyphicon-plus.padr
                    span Create
            h1
                a(ng-href="/p/{{project.code}}/s") System Tests
    include ../../main/views/partials/nav
    .alert.alert-info.text-center(ng-show="!systemTests.length") No system tests found
    table.table.table-hover.table-striped.table-condensed
        tbody(ng-repeat="systemTest in systemTests")
            tr.row
                td.col-md-2
                    a(ng-href="/p/{{project.code}}/s/{{systemTest.code}}") S{{systemTest.code}}
                td.col-md-4
                    a(ng-href="/p/{{project.code}}/s/{{systemTest.code}}") {{systemTest.name}}
                td.col-md-4 {{systemTest.description | limitTo: 100}}{{systemTest.description.length &gt; 100 ? '...' : ''}}
                td.col-md-2
                    .dropdown.pull-right
                        a.btn.btn-default(ng-href="/p/{{project.code}}/s/{{systemTest.code}}")
                            span.glyphicon.glyphicon-leaf
                        button.btn.btn-default.dropdown-toggle(aria-haspopup="true", aria-expanded="true", data-toggle="dropdown", type="button")
                            span.caret
                        ul.dropdown-menu
                            li
                                a(ng-href="/p/{{project.code}}/s/{{systemTest.code}}")
                                    span.glyphicon.glyphicon-leaf.padr
                                    span Manage
                            li.divider(role="separator")
                            li
                                a(ng-href="/p/{{project.code}}")
                                    span.glyphicon.glyphicon-list.padr
                                    span Project ({{project.code}})
                            li
                                a(ng-href="/p/{{project.code}}/r")
                                    span.glyphicon.glyphicon-gift.padr
                                    span Releases
                            li
                                a(ng-href="/p/{{project.code}}/f")
                                    span.glyphicon.glyphicon-apple.padr
                                    span Features
                            li
                                a(ng-href="/p/{{project.code}}/u")
                                    span.glyphicon.glyphicon-tree-deciduous.padr
                                    span User Stories
                            li
                                a(ng-href="/p/{{project.code}}/a")
                                    span.glyphicon.glyphicon-grain.padr
                                    span Acceptance Tests
                            li
                                a(ng-href="/p/{{project.code}}/s")
                                    span.glyphicon.glyphicon-leaf.padr
                                    span System Tests