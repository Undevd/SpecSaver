.container(ng-show="systemTests")
    .well
        fieldset
            legend.colour6
                h1
                    span System Tests
                    a.btn.btn-default.pull-right(ng-href="/c/p/{{project.code}}/s")
                        span.glyphicon.glyphicon-plus.padr
                        span Create
                h2
                    span.glyphicon.glyphicon-gift.padr
                    span
                        a(ng-href="/p/{{project.code}}") {{project.name}}
            table.table.table-hover.table-striped.table-condensed
                tbody(ng-repeat="systemTest in systemTests")
                    tr
                        td
                            a(ng-href="/p/{{project.code}}/r/{{systemTest.code}}") {{systemTest.name}}
                        td {{systemTest.description | limitTo: 100}}{{systemTest.description.length &gt; 100 ? '...' : ''}}
                        td
                            .dropdown.pull-right
                                a.btn.btn-default(ng-href="/p/{{project.code}}/a/{{systemTest.code}}")
                                    span.glyphicon.glyphicon-gift
                                button.btn.btn-default.dropdown-toggle(aria-haspopup="true", aria-expanded="true", data-toggle="dropdown", type="button")
                                    span.caret
                                ul.dropdown-menu
                                    li
                                        a(ng-href="/p/{{project.code}}/r/{{systemTest.code}}")
                                            span.glyphicon.glyphicon-gift.padr
                                            span Manage
                                    li.divider(role="separator")
                                    li
                                        a(ng-href="/p/{{project.code}}")
                                            span.glyphicon.glyphicon-list.padr
                                            span Project ({{project.code}})
                                    li
                                        a(ng-href="/p/{{project.code}}/r")
                                            span.glyphicon.glyphicon-gift.padr
                                            span Releases
                                    li
                                        a(ng-href="/p/{{project.code}}/f")
                                            span.glyphicon.glyphicon-apple.padr
                                            span Features
                                    li
                                        a(ng-href="/p/{{project.code}}/u")
                                            span.glyphicon.glyphicon-tree-deciduous.padr
                                            span User Stories
                                    li
                                        a(ng-href="/p/{{project.code}}/a")
                                            span.glyphicon.glyphicon-grain.padr
                                            span Acceptance Tests
                                    li
                                        a(href="#")
                                            span.glyphicon.glyphicon-leaf.padr
                                            span System Tests