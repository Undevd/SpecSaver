.container(ng-show="project")
    form.form-horizontal(name="systemTestForm")
        legend.colour6
            span.pull-right {{project.code}}
            h1 System Test
            h2
                span
                    a(ng-href="/p/{{project.code}}") {{project.name}}
                span.padr :
                span {{name}}
        nav.table
            .col-md-2.column1.padn
                a.box.btn.btn-block.column1(ng-href="/p/{{project.code}}")
                    span.glyphicon.glyphicon-th-list.padr(aria-label="List icon")
                    span.small Project
            .col-md-2.column1.padn
                a.box.btn.btn-block.column1(ng-href="/p/{{project.code}}/r")
                    span.glyphicon.glyphicon-gift.padr(aria-label="Gift icon")
                    span.small Releases
            .col-md-2.column1.padn
                a.box.btn.btn-block.column1(ng-href="/p/{{project.code}}/f")
                    span.glyphicon.glyphicon-apple.padr(aria-label="Apple icon")
                    span.small Features
            .col-md-2.column1.padn
                a.box.btn.btn-block.column1(ng-href="/p/{{project.code}}/u")
                    span.glyphicon.glyphicon-tree-deciduous.padr(aria-label="Tree icon")
                    span.small User Stories
            .col-md-2.column1.padn
                a.box.btn.btn-block.column1(ng-href="/p/{{project.code}}/a")
                    span.glyphicon.glyphicon-grain.padr(aria-label="Branch icon")
                    span.small Acceptance Tests
            .col-md-2.colour6.padn
                a.box.btn.btn-block.colour6(ng-href="/p/{{project.code}}/s")
                    span.glyphicon.glyphicon-leaf.padr(aria-label="Leaf icon")
                    span.small System Tests
        .alert.alert-danger.text-center(ng-show="error" role="alert") {{error}}
        .well
            .form-group
                .col-md-2.control-label
                    span.glyphicon.glyphicon-asterisk.text-danger.padr
                    label(for="name") Name
                .col-md-10
                    input.form-control(name="name", type="text", placeholder="Please enter a system test name...", ng-model="name", required)
                    .alert.alert-danger(role="alert", ng-show="systemTestForm.name.$invalid && systemTestForm.name.$dirty") Please enter a name
            .form-group
                label.col-md-2.control-label(for="description") Description
                .col-md-10
                    textarea.form-control(name="description", type="text", placeholder="Please enter a system test description...", ng-model="description", required)
                    .alert.alert-danger(role="alert", ng-show="systemTestForm.description.$invalid && systemTestForm.description.$dirty") Please enter a description
        .alert.alert-danger.text-center(ng-show="error" role="alert") {{error}}
        .col-md-10.col-md-offset-2
            .pull-right
                span.padr
                    button.btn.btn-success(ng-click="submit()", ng-disabled="systemTestForm.$invalid")
                        span.glyphicon.glyphicon-ok.padr
                        span Create
                span
                    a.btn.btn-default(ng-href="/p/{{project.code}}/s")
                        span.glyphicon.glyphicon-remove.padr
                        span Cancel