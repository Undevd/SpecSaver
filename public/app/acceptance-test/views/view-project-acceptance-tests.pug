.container(ng-show="project")
    include ../../main/views/partials/header
    .well
        h2 {{project.name}} Acceptance Tests
    include ../../main/views/partials/nav
    .alert.alert-info.text-center(ng-show="!stats.acceptanceTest.feature.length")
        .padb.row You must create a feature before creating an acceptance test
        .row
            a.btn.btn-default(ng-href="/c/p/{{project.code}}/f")
                span.glyphicon.glyphicon-plus.padr
                span Create
    div
        .col-md-2.col-sm-4.col-xs-6.padn(ng-class="'column' + ($index % 12 > 5 ? (6 - ($index % 6)) : (($index % 6) + 1))" ng-repeat="feature in stats.acceptanceTest.feature")
            a.btn.btn-block(ng-href="/p/{{project.code}}/f/{{feature.code}}/a")
                .box {{feature.code}}
                .box
                    span.glyphicon.glyphicon-grain(aria-label="Branch icon")
                .box {{feature.total}}