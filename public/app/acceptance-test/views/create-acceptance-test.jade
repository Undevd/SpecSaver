.container(ng-show="project")
    form.form-horizontal(name="acceptanceTestForm")
        legend.colour5
            span.pull-right {{project.code}}-{{feature.code}}
            h1 Acceptance Test
            h2
                span
                    a(ng-href="/p/{{project.code}}") {{project.name}}
                span.padr :
                span
                    a(ng-href="/p/{{project.code}}/f/{{feature.code}}") {{feature.name}}
        nav.table
            .col-md-2.column1.padn
                a.box.btn.btn-block.column1(ng-href="/p/{{project.code}}")
                    span.glyphicon.glyphicon-th-list.padr(aria-label="List icon")
                    span.small Project
            .col-md-2.column1.padn
                a.box.btn.btn-block.column1(ng-href="/p/{{project.code}}/r")
                    span.glyphicon.glyphicon-gift.padr(aria-label="Gift icon")
                    span.small Releases
            .col-md-2.column1.padn
                a.box.btn.btn-block.column1(ng-href="/p/{{project.code}}/f/{{feature.code}}")
                    span.glyphicon.glyphicon-apple.padr(aria-label="Apple icon")
                    span.small Feature
            .col-md-2.column1.padn
                a.box.btn.btn-block.column1(ng-href="/p/{{project.code}}/f/{{feature.code}}/u")
                    span.glyphicon.glyphicon-tree-deciduous.padr(aria-label="Tree icon")
                    span.small User Stories
            .col-md-2.colour5.padn
                a.box.btn.btn-block.colour5(ng-href="/p/{{project.code}}/f/{{feature.code}}/a")
                    span.glyphicon.glyphicon-grain.padr(aria-label="Branch icon")
                    span.small Acceptance Tests
            .col-md-2.column1.padn
                a.box.btn.btn-block.column1(ng-href="/p/{{project.code}}/f/{{feature.code}}/s")
                    span.glyphicon.glyphicon-leaf.padr(aria-label="Leaf icon")
                    span.small System Tests
        .alert.alert-danger.text-center(ng-show="error" role="alert") {{error}}
        .well
            .form-group
                .col-md-2.control-label
                    span.glyphicon.glyphicon-asterisk.text-danger.padr
                    label(for="given") Given
                .col-md-10
                    input.form-control(name="given", type="text", placeholder="Given an initial condition", ng-model="given", required)
            .form-group
                .col-md-2.control-label
                    span.glyphicon.glyphicon-asterisk.text-danger.padr
                    label(for="when") When
                .col-md-10
                    input.form-control(name="when", type="text", placeholder="When a key action is performed", ng-model="when", required)
            .form-group
                .col-md-2.control-label
                    span.glyphicon.glyphicon-asterisk.text-danger.padr
                    label(for="then") Then
                .col-md-10
                    input.form-control(name="then", type="text", placeholder="Then something observable happens", ng-model="then", required)
        .alert.alert-danger.text-center(ng-show="error" role="alert") {{error}}
        .col-md-10.col-md-offset-2
            .pull-right
                span.padr
                    button.btn.btn-success(ng-click="submit()", ng-disabled="acceptanceTestForm.$invalid")
                        span.glyphicon.glyphicon-ok.padr
                        span Create
                span
                    a.btn.btn-default(ng-href="/p/{{project.code}}/f/{{feature.code}}/a")
                        span.glyphicon.glyphicon-remove.padr
                        span Cancel