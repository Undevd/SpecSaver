.container
    .well
        fieldset
            legend.colour5
                h1
                    span Acceptance Tests
                    a.btn.btn-default.pull-right(ng-href="/c/p/{{project.code}}/f/{{feature.code}}/a")
                        span.glyphicon.glyphicon-plus.padr
                        span Create
                h2
                    span.glyphicon.glyphicon-grain.padr
                    span
                        a(ng-href="/p/{{project.code}}") {{project.name}}
                    span.padr :
                    span
                        a(ng-href="/p/{{project.code}}/f/{{feature.code}}") {{feature.name}}
            table.table.table-hover.table-striped.table-condensed
                tbody(ng-repeat="acceptanceTest in acceptanceTests")
                    tr
                        td
                            a(ng-href="/p/{{project.code}}/f/{{feature.code}}/a/{{acceptanceTest.code}}") {{acceptanceTest.code}}
                        td
                            div Given {{acceptanceTest.given}}
                            div When {{acceptanceTest.when}}
                            div Then {{acceptanceTest.then}}
                        td
                            .dropdown.pull-right
                                a.btn.btn-default(ng-href="/p/{{project.code}}/f/{{feature.code}}/a/{{acceptanceTest.code}}")
                                    span.glyphicon.glyphicon-grain
                                button.btn.btn-default.dropdown-toggle(aria-haspopup="true", aria-expanded="true", data-toggle="dropdown", type="button")
                                    span.caret
                                ul.dropdown-menu
                                    li
                                        a(ng-href="/p/{{project.code}}/f/{{feature.code}}/a/{{acceptanceTest.code}}")
                                            span.glyphicon.glyphicon-grain.padr
                                            span Manage
                                    li.divider(role="separator")
                                    li
                                        a(href="#")
                                            span.glyphicon.glyphicon-leaf.padr
                                            span System Tests