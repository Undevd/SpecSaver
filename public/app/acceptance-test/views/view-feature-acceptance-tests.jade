.container(ng-show="project")
    include ../../main/views/partials/header
    .alert.alert-info.text-center(ng-show="!acceptanceTests.length") No acceptance tests found
    table.table.table-hover.table-striped.table-condensed
        tbody(ng-repeat="acceptanceTest in acceptanceTests")
            tr.clickable-row.row(ng-click="goTo(acceptanceTest.code)")
                td.col-md-3
                    a(ng-href="/p/{{project.code}}/f/{{feature.code}}/a/{{acceptanceTest.code}}")
                        div A{{acceptanceTest.code}}
                td.col-md-9
                    a(ng-href="/p/{{project.code}}/f/{{feature.code}}/a/{{acceptanceTest.code}}")
                        div Given {{acceptanceTest.given}}
                        div When {{acceptanceTest.when}}
                        div Then {{acceptanceTest.then}}