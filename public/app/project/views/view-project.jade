.container
    .well
        fieldset(ng-repeat="project in projects")
            legend.colour1.pad
                span.glyphicon.glyphicon-th-list &nbsp; {{project.name}}
            .padb
                span {{project.description}}
            .padb
                a.btn.btn-block.colour2(href="/release/{{project._id}}")
                    span.glyphicon.glyphicon-gift
                    span &nbsp; Releases
                a.btn.btn-block.colour3(href="#")
                    span.glyphicon.glyphicon-apple
                    span &nbsp; Features
                a.btn.btn-block.colour4(href="#")
                    span.glyphicon.glyphicon-tree-deciduous
                    span &nbsp; User Stories
                a.btn.btn-block.colour5(href="#")
                    span.glyphicon.glyphicon-grain
                    span &nbsp; Acceptance Tests
                a.btn.btn-block.colour6(href="#")
                    span.glyphicon.glyphicon-leaf
                    span &nbsp; System Tests