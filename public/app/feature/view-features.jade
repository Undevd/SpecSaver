.container
    .well
        a.btn.btn-success(href="/feature/create")
            span.glyphicon.glyphicon-plus
            span &nbsp; Create
    .well
        fieldset
            legend View Features
            table.table.table-hover.table-striped.table-condensed
                thead
                    tr
                        th Feature
                        th Description
                        th Actions
                tbody(ng-repeat="feature in features")
                    tr
                        td {{feature.name}}
                        td {{feature.description}}
                        td 
                            a.btn.btn-success(href="/feature/edit/{{feature._id}}")
                                span.glyphicon.glyphicon-th-list
                                span &nbsp; View/Edit