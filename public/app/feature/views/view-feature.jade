.container
    .well
        fieldset
            legend.colour3
                h1
                    span Feature
                    span.pull-right {{project.code}}-{{feature.code}}
                h2
                    span.glyphicon.glyphicon-apple.padr
                    span
                        a(ng-href="/p/{{project.code}}") {{project.name}}
                    span.padr :
                    span(ng-show="!edit.name")
                        a.edit(ng-click="showEdit('name', true)" ng-mouseleave="hover.name = false" ng-mouseover="hover.name = true") {{feature.name}}
                    span.glyphicon.glyphicon-pencil.small(ng-show="hover.name")
                    span(ng-show="edit.name")
                        form(name="nameForm")
                            input.form-control(name="feature.name" ng-model="feature.name" type="text" placeholder="Name" required)
                            button.btn.btn-success(ng-click="submitEdit('name')", ng-disabled="nameForm.$invalid")
                                span.glyphicon.glyphicon-ok
                            a.btn.btn-default(ng-click="cancelEdit('name')")
                                span.glyphicon.glyphicon-remove
            .padb(ng-show="!edit.description")
                a.edit(ng-click="showEdit('description', true)" ng-mouseleave="hover.description = false" ng-mouseover="hover.description = true")
                    span(ng-show="feature.description") {{feature.description}}
                    span.glyphicon.glyphicon-pencil.small(ng-show="hover.description")
                    em(ng-cloak ng-show="!feature.description") Click to add a description
            .padb(ng-show="edit.description")
                form(name="descriptionForm")
                    textarea.form-control(name="feature.description" ng-model="feature.description" type="text" placeholder="Description")
                    button.btn.btn-success(ng-click="submitEdit('description')", ng-disabled="descriptionForm.$invalid")
                        span.glyphicon.glyphicon-ok
                    a.btn.btn-default(ng-click="cancelEdit('description')")
                        span.glyphicon.glyphicon-remove
            .padb
                .col-md-2.colour4.padn
                    a.btn.btn-block.colour4(ng-href="/p/{{project.code}}/f/{{feature.code}}/u")
                        .box User Stories
                        .box
                            span.glyphicon.glyphicon-tree-deciduous(aria-label="Tree icon")
                        .box {{userStory.count}}
                .col-md-2.colour5.padn
                    a.btn.btn-block.colour5(ng-href="/p/{{project.code}}/f/{{feature.code}}/a")
                        .box Acceptance Tests
                        .box
                            span.glyphicon.glyphicon-grain(aria-label="Branch icon")
                        .box 0
                .col-md-2.colour6.padn
                    a.btn.btn-block.colour6(href="#")
                        .box System Tests
                        .box
                            span.glyphicon.glyphicon-leaf(aria-label="Leaf icon")
                        .box 0