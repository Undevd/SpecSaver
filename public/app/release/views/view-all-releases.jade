.container(ng-show="releases")
    legend.colour2
        a.btn.btn-default.pull-right(ng-href="/c/p/{{project.code}}/r")
            span.glyphicon.glyphicon-plus.padr
            span Create
        h1 Releases
        h2
            a(ng-href="/p/{{project.code}}") {{project.name}}
    nav.table
        .col-md-2.column1.padn
            a.box.btn.btn-block.column1(ng-href="/p/{{project.code}}")
                span.glyphicon.glyphicon-th-list.padr(aria-label="List icon")
                span.small Project
        .col-md-2.colour2.padn
            a.box.btn.btn-block.colour2(ng-href="/p/{{project.code}}/r")
                span.glyphicon.glyphicon-gift.padr(aria-label="Gift icon")
                span.small Releases
        .col-md-2.column1.padn
            a.box.btn.btn-block.column1(ng-href="/p/{{project.code}}/f")
                span.glyphicon.glyphicon-apple.padr(aria-label="Apple icon")
                span.small Features
        .col-md-2.column1.padn
            a.box.btn.btn-block.column1(ng-href="/p/{{project.code}}/u")
                span.glyphicon.glyphicon-tree-deciduous.padr(aria-label="Tree icon")
                span.small User Stories
        .col-md-2.column1.padn
            a.box.btn.btn-block.column1(ng-href="/p/{{project.code}}/a")
                span.glyphicon.glyphicon-grain.padr(aria-label="Branch icon")
                span.small Acceptance Tests
        .col-md-2.column1.padn
            a.box.btn.btn-block.column1(ng-href="/p/{{project.code}}/s")
                span.glyphicon.glyphicon-leaf.padr(aria-label="Leaf icon")
                span.small System Tests
    .alert.alert-info.text-center(ng-show="!releases.length") No releases found
    table.table.table-hover.table-striped.table-condensed(ng-show="releases.length")
        tbody(ng-repeat="release in releases")
            tr
                td
                    a(ng-href="/p/{{project.code}}/r/{{release.code}}") {{release.name}}
                td {{release.description | limitTo: 100}}{{release.description.length &gt; 100 ? '...' : ''}}
                td
                    .dropdown.pull-right
                        a.btn.btn-default(ng-href="/p/{{project.code}}/r/{{release.code}}")
                            span.glyphicon.glyphicon-gift
                        button.btn.btn-default.dropdown-toggle(aria-haspopup="true", aria-expanded="true", data-toggle="dropdown", type="button")
                            span.caret
                        ul.dropdown-menu
                            li
                                a(ng-href="/p/{{project.code}}/r/{{release.code}}")
                                    span.glyphicon.glyphicon-gift.padr
                                    span Manage
                            li.divider(role="separator")
                            li
                                a(ng-href="/p/{{project.code}}/r/{{release.code}}/f")
                                    span.glyphicon.glyphicon-apple.padr
                                    span Features
                            li
                                a(ng-href="/p/{{project.code}}/r/{{release.code}}/u")
                                    span.glyphicon.glyphicon-tree-deciduous.padr
                                    span User Stories
                            li
                                a(ng-href="/p/{{project.code}}/r/{{release.code}}/a")
                                    span.glyphicon.glyphicon-grain.padr
                                    span Acceptance Tests
                            li
                                a(ng-href="/p/{{project.code}}/r/{{release.code}}/s")
                                    span.glyphicon.glyphicon-leaf.padr
                                    span System Tests