.container
    .well
        fieldset
            legend.colour2
                h1
                    span.glyphicon.glyphicon-gift.padr
                    span
                        a(ng-href="/p/{{project.code}}") {{project.name}}
                    span.padr :
                    span Releases
                    a.btn.btn-default.pull-right(ng-href="/c/p/{{project.code}}/r")
                        span.glyphicon.glyphicon-plus.padr
                        span Create
            table.table.table-hover.table-striped.table-condensed
                tbody(ng-repeat="release in releases")
                    tr
                        td
                            a(ng-href="/p/{{project.code}}/r/{{release.code}}") {{release.name}}
                        td {{release.description | limitTo: 100}}{{release.description.length &gt; 100 ? '...' : ''}}
                        td
                            .dropdown.pull-right
                                a.btn.btn-default(ng-href="/p/{{project.code}}/r/{{release.code}}")
                                    span.glyphicon.glyphicon-gift
                                button.btn.btn-default.dropdown-toggle(aria-haspopup="true", aria-expanded="true", data-toggle="dropdown", type="button")
                                    span.caret
                                ul.dropdown-menu
                                    li
                                        a(ng-href="/p/{{project.code}}/r/{{release.code}}")
                                            span.glyphicon.glyphicon-gift.padr
                                            span Manage
                                    li.divider(role="separator")
                                    li
                                        a(ng-href="/p/{{project.code}}/r/{{release.code}}/f")
                                            span.glyphicon.glyphicon-apple.padr
                                            span Features
                                    li
                                        a(href="#")
                                            span.glyphicon.glyphicon-tree-deciduous.padr
                                            span User Stories
                                    li
                                        a(href="#")
                                            span.glyphicon.glyphicon-grain.padr
                                            span Acceptance Tests
                                    li
                                        a(href="#")
                                            span.glyphicon.glyphicon-leaf.padr
                                            span System Tests