.container
    .well
        fieldset
            legend.colour2.padlr
                h1
                    small
                        span.glyphicon.glyphicon-gift
                        span &nbsp; Releases
                    a.btn.btn-default.pull-right(href="/release/create/{{projectId}}")
                        span.glyphicon.glyphicon-plus
                        span &nbsp; Create
            table.table.table-hover.table-striped.table-condensed
                tbody(ng-repeat="release in releases")
                    tr
                        td
                            a(href="/release/{{projectId}}/{{release._id}}") {{release.name}}
                        td {{release.description}}
                        td
                            a.btn.btn-default.pull-right(href="/release/{{projectId}}/{{release._id}}")
                                span.glyphicon.glyphicon-gift
                                span &nbsp; Manage