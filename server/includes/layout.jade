doctype
html(ng-app='app')
    head
        title(ng-bind="$root.title") SpecSaver
        base(href="/")
        link(rel="stylesheet", href="/vendor/bootstrap/dist/css/bootstrap.css")
        link(rel="stylesheet", href="/vendor/ng-sortable/dist/ng-sortable.css")
        link(rel="stylesheet", href="/vendor/toastr/toastr.css")
        link(rel="stylesheet", href="/css/site.css")
    body.ng-cloak
        include currentUser
        .navbar.navbar-inverse.navbar-fixed-top
            .container
                .navbar-header
                    a.navbar-brand(href="/") SpecSaver
                .navbar-collapse.collapse
                    ul.nav.navbar-nav
                        li
                            a(href="/") Home
                        li 
                            a(href="/p") Projects
                    div(ng-include="'/partials/account/views/navbar-login'")
        block main-content
        footer.container.text-center
            img(ng-src="images/allthethings.png")
            div(ng-controller="mvMainCtrl")
                div(page-quote)
        include scripts